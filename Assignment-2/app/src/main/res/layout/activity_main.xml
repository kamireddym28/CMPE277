<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1A4E5D"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="110dp"
        android:layout_height="120dp"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintVertical_bias="0.05"
        app:srcCompat="@drawable/sjsu_logo"/>

    <TextView
        android:id="@+id/textHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Implicit Intents"
        android:textColor="@android:color/white"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.7"
        app:layout_constraintVertical_bias="0.11" />

    <TextView style="@style/ViewText"
        android:text="URL:"
        app:layout_constraintVertical_bias="0.3" />

    <EditText style="@style/ViewEdit"
        android:id="@+id/editText"
        android:hint="www.sjsu.edu"
        app:layout_constraintVertical_bias="0.3"/>

    <Button
        android:id="@+id/btnLaunch"
        android:layout_width="150dp"
        android:layout_height="38dp"
        android:background="#FFC107"
        android:text="Launch"
        android:textSize="17dp"
        android:textColor="@android:color/white"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.4" />

    <TextView style="@style/ViewText"
        android:text="Phone:"
        app:layout_constraintVertical_bias="0.55" />

    <EditText style="@style/ViewEdit"
        android:id="@+id/editText1"
        android:hint="(xxx)xxx-xxxx"
        app:layout_constraintVertical_bias="0.55"/>

    <Button
        android:id="@+id/btnRing"
        android:layout_width="150dp"
        android:layout_height="38dp"
        android:background="#970E0E"
        android:text="Ring"
        android:textSize="17dp"
        android:textColor="@android:color/white"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.65" />

    <Button
        android:id="@+id/Finish"
        android:layout_width="225dp"
        android:layout_height="50dp"
        android:background="#000000"
        android:onClick="Finish"
        android:text="Close App"
        android:textSize="20dp"
        android:textColor="@android:color/white"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.85" />

</androidx.constraintlayout.widget.ConstraintLayout>